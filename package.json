{
  "name": "visiocampus-socketio-signaling-server",
  "version": "1.0.0",
  "description": "Socket.IO Signaling Server pour VisioCampus - SystÃ¨me Hybride P2P/SFU",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "node test-connection.js",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "debug": "DEBUG=socket.io* node server.js"
  },
  "keywords": [
    "webrtc",
    "socket.io",
    "signaling",
    "visiocampus",
    "p2p",
    "sfu",
    "mediasoup",
    "video-conference",
    "real-time"
  ],
  "author": "VisioCampus Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/visiocampus-signaling-server"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.7.5"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  },
  "render": {
    "start": "node server.js",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 10
  },
  "environments": {
    "production": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "development": {
      "NODE_ENV": "development",
      "PORT": 3001
    }
  },
  "config": {
    "port": 3001,
    "maxParticipantsPerRoom": 50,
    "autoSwitchThreshold": 10,
    "pingInterval": 25000,
    "pingTimeout": 60000
  }
}
